@model WebApplication2.Models.SearchResultsViewModel

@{
    ViewBag.Title = "Search Results";
}

<h2>Search Results</h2>

<form method="get" action="@Url.Action("Search", "Account")">
    <div class="form-group">
        <label for="query">Search by Username or Email:</label>
        <input type="text" name="query" class="form-control" id="query" value="@Model.Query" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (!string.IsNullOrEmpty(Model.Query))
{
    if (Model.Users != null && Model.Users.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@(user.UserName ?? "Unknown")</td>
                        <td>@(user.Email ?? "Unknown")</td>
                        <td>@(user.FirstName ?? "Unknown")</td>
                        <td>@(user.LastName ?? "Unknown")</td>
                        <td>@(user.DateOfBirth.HasValue ? user.DateOfBirth.Value.ToShortDateString() : "Unknown")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No results found.</p>
    }
}
