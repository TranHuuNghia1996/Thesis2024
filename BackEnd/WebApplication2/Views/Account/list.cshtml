@model IEnumerable<WebApplication2.Models.UsersViewModel>

<style>
    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px; /* Row spacing */
    }

    th, td {
        padding: 10px; /* Padding for each cell */
        text-align: left;
        border-bottom: 1px solid #ddd; /* Bottom border for each cell */
    }

    thead tr {
        background-color: #f2f2f2;
    }

    tbody tr {
        background-color: #fff;
        border-radius: 5px; /* Rounded corners for each row */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }

        tbody tr:hover {
            background-color: #f9f9f9; /* Background color when hovering over a row */
        }
</style>

<h2>User List</h2>
<p>Total Members: @ViewBag.TotalUsers</p>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Select((user, index) => new { user, index }))
        {
            <tr>
                <td>@(user.index + 1)</td> <!-- Display row number -->
                <td>@user.user.UserName</td>
                <td>@user.user.Email</td>
                <td>@(user.user.FirstName ?? "Unknown")</td>
                <td>@(user.user.LastName ?? "Unknown")</td>
                <td>@(user.user.DateOfBirth.HasValue ? user.user.DateOfBirth.Value.ToShortDateString() : "Unknown")</td>
            </tr>
        }
    </tbody>
</table>
